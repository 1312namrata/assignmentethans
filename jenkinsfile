pipeline {
    agent any

    environment {
        DOCKER_HUB_CREDENTIALS = credentials('docker-hub-creds') // Jenkins credentials ID
        IMAGE_NAME = "nrodage21005/myfiles" // Docker Hub image name
    }

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/1312namrata/assignmentethans.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    dockerImage = docker.build("${IMAGE_NAME}")
                }
            }
        }

        stage('Login to Docker Hub and Push') {
            steps {
                script {
                    docker.withRegistry('', DOCKER_HUB_CREDENTIALS) {
                        dockerImage.push('latest')
                    }
                }
            }
        }
    }

    post {
        success {
            echo "✅ Docker image pushed: ${IMAGE_NAME}:latest"
        }
        failure {
            echo "❌ Pipeline failed"
        }
    }
}
